    <!-- ===========================TREE VIEW================================ -->

    <record model="ir.ui.view" id="computer_view_tree">
      <field name="name">rank.student.tree</field>
      <field name="model">rank.student</field>
      <field name="arch" type="xml">
        <tree string="Tags">
          <field name="name" />
          <field name="matricule" />
          <field name="department_id" />
          <field name="email" />
          <field name="is_registered" />
          <field name="gender" />
          <field name="dob" />
          <field name="nationality" />
          <field name="photo" />
        </tree>
      </field>
    </record>


    <!-- ===========================SEARCH VIEW================================ -->

    <record model="ir.ui.view" id="computer_view_search">
      <field name="name">rank.student.search</field>
      <field name="model">rank.student</field>
      <field name="arch" type="xml">
        <search string="Tags">
          <field name="name" />
          <field name="matricule" />
          <field name="dob" />
          <field name="email" />
          <separator string="Matricule" />
          <filter string="Computer Engineering" name="department_id" domain="[('department_id','=', 'res.department_id')]" />
          <group expand="0" string="Group By">
            <filter string="Gender" name="gender" domain="" context="{'group_by':'gender'}" />
          </group>
        </search>
      </field>
    </record>


    <!-- ===========================FORM VIEW================================ -->

    <record model="ir.ui.view" id="computer_view_form">
      <field name="name">rank.student.form</field>
      <field name="model">rank.student</field>
      <field name="arch" type="xml">
        <form string="Tags">
          <sheet>
            <div class="oe_title">
              <h1>
                <field name="matricule" readonly="1" />
              </h1>
            </div>
            <group>
              <field name="name" />
              <field name="email" />
            </group>
            <group>
              <field name="is_registered" />
              <field name="gender" />
            </group>
            <group>
              <field name="dob" />
              <field name="nationality" />
            </group>
            <group>
              <field name="photo" />
              <field name="department_id" />
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- =================== KANBAN VIEW ======================= -->


    <record id="staff_view_kanban" model="ir.ui.view">
      <field name="name">rank.student.kanban</field>
      <field name="model">rank.student</field>
      <field name="arch" type="xml">
        <kanban>
          <field name="name" />
          <field name="matricule" />
          <field name="email" />
          <field name="is_registered" />
          <field name="gender" />
          <field name="dob" />
          <field name="nationality" />
          <field name="photo" />
          <templates>
            <t t-name="kanban-box">
              <div t-attf-class="oe_kanban_global_click">
                <ul>
                  <li>
                    Name:
                    <field name="name" />
                  </li>
                  <li>
                    Matricule:
                    <field name="matricule" />
                  </li>
                  <li>
                    Email:
                    <field name="email" />
                  </li>
                  <li>
                    Is Registered:
                    <field name="is_registered" />
                  </li>
                  <li>
                    Gender:
                    <field name="gender" />
                  </li>
                  <li>
                    Date of Birth:
                    <field name="dob" />
                  </li>
                  <li>
                    Nationality:
                    <field name="nationality" />
                  </li>
                  <li>
                    Photo:
                    <field name="photo" />
                  </li>
                  <li>
                    Department:
                    <field name="department_id" />
                  </li>
                </ul>
              </div>
            </t>
          </templates>
        </kanban>
      </field>
    </record>

    <!-- =========================COME-ACTION VIEW================================ -->

    <record id="computer_student_action" model="ir.actions.act_window">
      <field name="name">Student</field>
      <field name="res_model">rank.student</field>
      <field name="type">ir.actions.act_window</field>
      <field name="view_mode">tree,form,kanban</field>
    </record>


    <!-- =========================EEE-ACTION VIEW================================ -->

    <record id="electrical_student_action" model="ir.actions.act_window">
      <field name="name">Student</field>
      <field name="res_model">rank.student</field>
      <field name="type">ir.actions.act_window</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- =========================MEC-ACTION VIEW================================ -->

    <record id="mechanical_student_action" model="ir.actions.act_window">
      <field name="name">Student</field>
      <field name="res_model">rank.student</field>
      <field name="type">ir.actions.act_window</field>
      <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="School" id="school_root" />
    <menuitem name="Student" id="student_root" parent="school_root" sequence="1" action="computer_student_action" />
