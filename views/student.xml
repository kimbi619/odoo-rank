    <menuitem name="Electrical Engineering" id="electrical_engineering_root" sequence="2" parent="student_root" action="electrical_student_action" />
    <menuitem name="Mechanical Engineering" id="mechanical_engineering_root" sequence="3" parent="student_root" action="mechanical_student_action" /> -->
  </data>
</odoo>