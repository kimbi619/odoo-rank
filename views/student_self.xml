<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="student_dash_board_kanban" model="ir.ui.view">
            <field name="name">rank.student_self.kanban</field>
            <field name="model">rank.student_self</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="name" />
                    <field name="matricule" />
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="container">
                                    <div>
                                        <h1>
                                            <field name="name" />
                                        </h1>
                                    </div>
                                    <div>
                                        <field name="matricule" />
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="student_dash_board_tree" model="ir.ui.view">
            <field name="name">rank.student_self.tree</field>
            <field name="model">rank.student_self</field>
            <field name="arch" type="xml">
                <form string="Tags">
                    <div class="container">
                        <field name="name" />
                        <field name="matricule" />
                    </div>
                </form>
            </field>
        </record>

        <!-- =========================ACTION VIEW================================ -->

        <record id="action_student_dashboard" model="ir.actions.act_window">
            <field name="name">Student Dashboard</field>
            <field name="res_model">rank.student_self</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">kanban,form</field>
        </record>
        <!-- ============================= MENU ITEMS ======================= -->

        <menuitem name="School" id="school_root" />
        <menuitem name="Dashboard" id="student_dashboard" parent="school_root" action="action_student_dashboard" sequence="1" />
    </data>
</odoo>